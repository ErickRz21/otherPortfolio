---
import Navbar from "../components/Navbar.astro";
import BaseLayout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <div class="main" id="projects">
    <Navbar />
    <div class="gif">
      <img alt="RaccoonLaptopGif" src="/laptop.webp" />
    </div>
    <div class="main__container">
      <h2 class="mt-0">{frontmatter.title}</h2>
      <slot />
      <ul class="my-3 text-xs lg:text-base">
        {
          frontmatter.platform && (
            <li class="hover:text-current py-1">
              <span class="badge">platform</span> {frontmatter.platform}
            </li>
          )
        }
        {
          frontmatter.stack && (
            <li class="hover:text-current py-1">
              <span class="badge">stack</span> {frontmatter.stack}
            </li>
          )
        }
        {
          frontmatter.website && (
            <li class="py-1">
              <span class="badge">website</span>
              <a
                class="text-wisteria hover:text-violet-200 duration-300"
                href={frontmatter.website}
                target="_blank"
                rel="noopener noreferrer"
              >
                {frontmatter.website}
              </a>
            </li>
          )
        }
        {
          frontmatter.github && (
            <li class="py-1">
              <span class="badge">github</span>
              <a
                class="text-wisteria hover:text-violet-200 duration-300"
                href={frontmatter.github}
                target="_blank"
                rel="noopener noreferrer"
              >
                {frontmatter.github}
              </a>
            </li>
          )
        }
      </ul>
      {
        frontmatter.worksImage1 && (
          <div class="flex justify-center items-center">
            <div class="flex flex-col space-y-3">
              <img
                class="rounded-2xl shadow-xl"
                src={frontmatter.worksImage1.url}
                alt={frontmatter.worksImage1.alt || "Project work image"}
              />
            </div>
          </div>
        )
      }
    </div>
  </div>
  <script type="module" src="/src/animations.ts"></script>
</BaseLayout>
