---
import Navbar from "../components/Navbar.astro";
import BaseLayout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="main">
    <Navbar />
    <div class="gif">
      <img width="300" height="259" alt="RaccoonLaptopGif" src="/laptop.webp" />
    </div>
    <div
      class="bg-gunmetal-bg border border-gray-700 my-0 mx-auto p-10 rounded-2xl shadow-xl space-y-7"
    >
      <h2>{frontmatter.title}</h2>
      <slot />
      <ul>
        <li class="hover:text-current">
          <span class="badge">PLATFORM</span>{frontmatter.platform}
        </li>
        <li class="hover:text-current">
          <span class="badge">STACK</span>{frontmatter.stack}
        </li>
        <li>
          <span class="badge">WEBSITE</span><a
            class="hover:underline text-wisteria"
            href={frontmatter.website}
            target="_blank">{frontmatter.website}</a
          >
        </li>
        <li>
          <span class="badge">GITHUB</span><a
            class="hover:underline text-wisteria"
            href={frontmatter.github}
            target="_blank">{frontmatter.github}</a
          >
        </li>
      </ul>
      <div class="flex justify-center items-center">
        <div class="flex flex-col space-y-4">
          <img
            class="w-[500px] h-[281] rounded-2xl shadow-xl"
            src={frontmatter.worksImage1?.url || "default-image-url.jpg"}
            alt={frontmatter.worksImage1?.alt || "Default alt text"}
          />
          <img
            class="w-[500px] h-[281] rounded-2xl shadow-xl"
            src={frontmatter.worksImage1?.url || "default-image-url.jpg"}
            alt={frontmatter.worksImage1?.alt || "Default alt text"}
          />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
